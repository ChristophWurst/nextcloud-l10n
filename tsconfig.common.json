{
    "$schema": "https://json.schemastore.org/tsconfig",
    "compilerOptions": {
        "target": "ES2022",
        "declaration": true,
        "declarationDir": "./dist",
        "esModuleInterop": true,
        "sourceMap": true,
        "sourceRoot": "./lib",
        "moduleResolution": "node",
        "strict": true,
        "lib": [
            "es6",
            "dom"
        ],
        "noImplicitAny": false,
    },
    "exclude": ["./dist"]
}
